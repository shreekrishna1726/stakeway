<!-- Team Section -->
<div id="product" class="text-center">
  <div class="container">
    <div class="section-title center">
      <h2>Most View Products</h2>
      <hr>
    </div>
    <div class="row">
      <div class="portfolio-items isotope" style=" height: 419px;">
        <%-@products.take(8).each do |product|%>
          <div class="col-xs-6 col-sm-6 col-md-3 col-lg-3 lorem isotope-item" style="left: 0px; top: 0px; transform: translate3d(0px, 0px, 0px);">
            <div class="portfolio-item">
              <div class="hover-bg">
                <div class="hover-text">
                  <h4><%=link_to product.try(:name), product_path(product)%></h4>
                  <p><%= display_price(product) %></p>
                </div>
                <%= large_image(product, itemprop: "image", class:"img-responsive" )%></div>
            </div>
          </div>
        <%end%>
      </div>
    </div>
  </div>
</div>




